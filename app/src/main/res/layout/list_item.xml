<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/picsize"
        android:layout_height="@dimen/picsize"
        android:id="@+id/paveikslelis"
        android:src="@drawable/ic_launcher_background"
        />
        <LinearLayout
            android:layout_width="@dimen/weighted"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">
        <TextView
            android:id="@+id/pavadinimas"
            style="@style/wrap"
            android:layout_marginLeft="@dimen/margin"
            android:textSize="@dimen/booknamesize"
            android:layout_marginRight="@dimen/margin"/>
        <TextView
            style="@style/wrap"
            android:id="@+id/autorius"
            android:layout_marginLeft="@dimen/margin" />

        </LinearLayout>
<LinearLayout
    style="@style/wrap"
    android:layout_weight="0"
    android:orientation="vertical">
        <TextView
            android:id="@+id/kaina"
            style="@style/wrap"
            android:textSize="@dimen/sizeofprice"
            android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/valiuta"
                style="@style/wrap"
                android:layout_below="@+id/kaina"
                android:layout_alignParentRight="true"/>
</LinearLayout>
    </LinearLayout>
</LinearLayout>
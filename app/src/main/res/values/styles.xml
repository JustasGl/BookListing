<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PictureTextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorTextBackground</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
    <style name="image">
        <item name="android:layout_width">@dimen/imageWidth</item>
        <item name="android:layout_height">@dimen/imageHeight</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="realitivelayout">
        <item name="android:layout_width">@dimen/imageWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/imageWidth</item>
    </style>
</resources>
